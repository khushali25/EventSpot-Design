

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="customerpack.Frag_CustomerProfile"
    android:background="@drawable/tri"
    >

    <!-- TODO: Update blank fragment layout -->


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/customer"
        android:id="@+id/circleView"
       android:layout_marginLeft="20dp" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Update Profile"
       android:textSize="18dp"
       android:linksClickable="true"
       android:clickable="true"
       android:layout_marginLeft="200dp"
       android:layout_marginTop="95dp"
       android:id="@+id/updateprofile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Event Detail"
        android:textSize="18dp"
        android:linksClickable="true"
        android:clickable="true"
        android:id="@+id/viewdetail"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="125dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textSize="18dp"
        android:linksClickable="true"
        android:clickable="true"
        android:id="@+id/changepass2"
        android:layout_marginTop="195dp"
        android:layout_marginLeft="90dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="18dp"
        android:linksClickable="true"
        android:clickable="true"
        android:id="@+id/cust_logout"
       android:layout_marginTop="195dp"
       android:layout_marginLeft="18dp"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view_customerprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginTop="240dp"
        />



</RelativeLayout>
