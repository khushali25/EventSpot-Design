<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="customerpack.Frag_TellaFriend"
    android:background="@drawable/tri">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textInputLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frndemailid"
            android:hint=" Enter Email Id"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:drawableLeft="@drawable/email2"
            android:drawableTint="#EC407A"
            android:layout_marginTop="150dp"

            />
    </android.support.design.widget.TextInputLayout>

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/spinner_lsitofvenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Venue"
        app:met_floatingLabel="normal"
        android:drawableLeft="@drawable/servicetype"
        android:drawableTint="#EC407A"
        android:layout_above="@+id/textInputLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp" />

    <Button
        android:id="@+id/sendtofrined"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#EC407A"
        android:text="Send"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textInputLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
