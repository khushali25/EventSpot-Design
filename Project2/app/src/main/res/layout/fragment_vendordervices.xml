<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/tri"
    tools:context="vendorpack.vendordervices">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#F06292"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="Register Service"
            android:textSize="20dp"
            android:layout_marginBottom="349dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_marginTop="-320dp"
            android:layout_height="wrap_content"
            android:hint="Select Service Type"
            app:met_helperTextColor="@color/colorPrimary"

            android:textColorHint="@color/colorPrimary"
            app:met_floatingLabel="normal" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txservicename1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv1"
        android:padding="2dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txservicename"
            android:hint="Service Name"
            android:textColorHint="@color/colorPrimary"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:drawableLeft="@drawable/name4"
            android:drawableTint="#EC407A" />
    </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/txserviceimage1"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lv1"
            android:padding="2dp"
            >

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/txserviceimage"
                android:hint="Service Image"
                android:textColorHint="@color/colorPrimary"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:drawableLeft="@drawable/profilepic"
                android:drawableTint="#EC407A" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/serviceimage"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="-40dp"
            android:text="Add"
            android:background="#F48FB1"/>






        <android.support.design.widget.TextInputLayout
            android:id="@+id/txmb1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/txweb1"
            android:padding="2dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txweb"
                android:hint="Website"
                android:inputType="textWebEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:drawableLeft="@drawable/website"
                android:drawableTint="#EC407A"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/txweb1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/txserdesc1"
            android:padding="2dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txmbno"
                android:hint="Mobile No"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:drawableLeft="@drawable/telephone"
                android:drawableTint="#EC407A"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btregser"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            android:theme="@style/AppTheme.ButtonBorderless"
            android:text="Make Payment"
            />
    </LinearLayout>


</RelativeLayout>
